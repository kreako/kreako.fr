---
const {title} = Astro.props;
---
<html>
  <head>
    <title>kreako - {title}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
    <link rel="sitemap" href="/sitemap.xml">
    <link rel="alternate" type="application/rss+xml" href="/rss.xml">
  </head>
  <body>
    <header class="flex flex-row bg-gradient-to-br from-purple-500 to-purple-600 items-center space-x-6">
      <div class="ml-2 my-2 flex-none">
        <a href="/">
          <img src="/assets/avatar.png" class="rounded-full w-12 h-12 bg-white">
        </a>
      </div>
      <div class="text-white uppercase tracking-wide text-xs font-semibold">
        <a href="/blog">
          Blog
        </a>
      </div>
      <div class="text-white uppercase tracking-wide text-xs font-semibold">
        <a href="/contact">
          Contact
        </a>
      </div>
      <div>
        <a href="/search">
          <svg width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            class="text-gray-200 hover:text-white transition-colors duration-150">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z">
            </path>
          </svg>
        </a>
      </div>
    </header>

    <slot />

  </body>
</html>
